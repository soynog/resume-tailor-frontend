{{#each documents}}
  <div class="panel panel-default doc-list">
    <div class="panel-heading {{json.style}}">

      <!--<button type="button" class="btn btn-link edit-doc-title-button" data-target="{{this.id}}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      </button>-->

      <div class="input-group">
        <span class="input-group-addon sizing-addon2">
          <button type="button" class="btn btn-link expand-document-button" data-toggle="collapse" data-target="#doc{{this.id}}content" aria-expanded="false" aria-controls="collapseExample">
            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
          </button>
        </span>
        <form class="edit-doc-title-form" data-target="{{this.id}}">
          <input type="text" name="title" class="form-control" aria-label="Document Title" placeholder="{{this.title}}" aria-descriedby="sizing-addon1">
        </form>
        <span class="input-group-addon">
          <button type="button" class="btn btn-link delete-document-button" data-target="{{this.id}}">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          </button>
        </span>
      </div>


<!--
      <form class="edit-doc-title-form" data-target="{{this.id}}">
        <div class="input-group inline-block hide">
          <input type="text" name="title" class="form-control" placeholder="{{this.title}}">
        </div>
      </form>

      <button type="button" class="btn btn-link delete-document-button" data-target="{{this.id}}">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      </button>
-->
    </div>
    <div class="collapse panel-body" id="doc{{this.id}}content">
      {{>doc-content}}
    </div>
  </div>
{{/each}}

<div class="doc-content-container">

  {{#each this.children}}
      <div class="doc-content-row">
        <div class="doc-content">
          <span contenteditable="true" class="doc-content-input" data-target="{{this.id}}">
            <div class="{{this.style}}">{{this.content}}</div>
          </span>
        </div>
        <span>
          <button type="button" class="btn btn-link include-content-button" data-target="{{this.id}}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          </button>
        </span>
        <span>
          <button type="button" class="btn btn-link remove-content-button" data-target="{{this.id}}">
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
          </button>
        </span>
      </div>
      {{>doc-content}}

  {{/each}}

  <div class="new-content">
    <span contenteditable="true" class="new-content-input">
      <div class="{{this.style}} small">enter new content here</div>
    </span>
  </div>

</div>
